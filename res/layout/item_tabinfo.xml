<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tab_selector"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tabinfo"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginTop="@dimen/overview_tab_top_margin"
        android:layout_marginBottom="@dimen/overview_tab_bottom_margin"
        android:gravity="center"
        android:textColor="@drawable/tab_textcolor"
        android:textSize="@dimen/overview_tab_text_size" />

</LinearLayout>