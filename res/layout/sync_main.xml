<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

    <ImageView
        android:id="@+id/imageDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_phone" />

    <TextView
        android:id="@+id/textDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageDevice"
        android:layout_centerHorizontal="true"
        android:text="lmichael-Nexus S"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textDevice"
        android:layout_centerHorizontal="true"
        android:text="2009-01-01~20130409"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textPeriod"
        android:layout_margin="5dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"            
            android:src="@drawable/ic_photo" />

        <TextView
            android:id="@+id/textPhotoCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView1"
            android:layout_toRightOf="@+id/imageView1"
            android:layout_marginLeft="2dp"
            android:text="total 100 photos"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textPhotoSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textPhotoCount"
            android:layout_alignRight="@+id/textPhotoCount"
            android:layout_below="@+id/textPhotoCount"
            android:layout_marginLeft="2dp"
            android:text="7GB" 
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnDeletePhoto"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageView1"
            android:layout_alignBottom="@+id/imageView1"
            android:text="@string/clean_space"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"            
            android:src="@drawable/ic_video" />

        <TextView
            android:id="@+id/textVideoCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_marginLeft="2dp"
            android:text="total 10 videos" 
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/textVideoSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textVideoCount"
            android:layout_alignRight="@+id/textVideoCount"
            android:layout_below="@+id/textVideoCount"
            android:layout_marginLeft="2dp"
            android:text="7GB" 
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnDeleteVideo"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/btnDeletePhoto"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageView2"
            android:layout_alignBottom="@+id/imageView2"
            android:text="@string/clean_space"
            android:textSize="14sp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl2"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"            
            android:src="@drawable/ic_audio" />

        <TextView
            android:id="@+id/textAudioCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_marginLeft="2dp"
            android:text="" 
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/textAudioSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textAudioCount"
            android:layout_alignRight="@+id/textAudioCount"
            android:layout_below="@+id/textAudioCount"
            android:layout_marginLeft="2dp"
            android:text="7GB" 
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnDeleteAudio"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/btnDeletePhoto"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageView3"
            android:text="@string/clean_space"
            android:textSize="14sp" />

    </RelativeLayout>
    
    <View
            android:id="@+id/btnVideoPhoto"        
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/rl3"
  			android:background="#00FF00"
    />

    
    <ListView
  		android:id="@+id/listview"
        android:layout_below="@+id/btnVideoPhoto"        
  		android:layout_width="match_parent"
  		android:layout_height="wrap_content">

	</ListView> 	
    
</RelativeLayout>