<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#061E30" >

    <ImageView
        android:id="@+id/imageDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_phone" />

    <TextView
        android:id="@+id/textDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageDevice"
        android:layout_centerHorizontal="true"
        android:text="lmichael-Nexus S"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textTotolInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textDevice"
        android:layout_centerHorizontal="true"
        android:text="@string/total_info"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/textPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTotolInfo"
        android:layout_centerHorizontal="true"
        android:text="@string/period"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />
    
    <LinearLayout 
        android:id="@+id/llTotalContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textPeriod"
        android:layout_margin="3dp"
        android:orientation="horizontal"
        android:baselineAligned="false" >

     <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="2dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" 
            android:layout_centerHorizontal="true"           
            android:src="@drawable/ic_photo" />

        <TextView
            android:id="@+id/textPhotoCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:text="100 photos"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textPhotoSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textPhotoCount"
            android:layout_centerHorizontal="true"
            android:text="7GB" 
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnDeletePhoto"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_below="@+id/textPhotoSize"
            android:text="@string/clean_space"
            android:textSize="14sp"
            android:visibility="gone" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="2dp" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"            
            android:src="@drawable/ic_video" />

        <TextView
            android:id="@+id/textVideoCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:text="total 10 videos" 
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/textVideoSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textVideoCount"
            android:layout_centerHorizontal="true"
            android:text="7GB" 
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnDeleteVideo"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_below="@+id/textVideoSize"
            android:text="@string/clean_space"
            android:textSize="14sp" 
            android:visibility="gone"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="2dp" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"     
            android:layout_centerHorizontal="true"       
            android:src="@drawable/ic_audio" />

        <TextView
            android:id="@+id/textAudioCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:text="total 5 audios" 
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/textAudioSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textAudioCount"
            android:layout_centerHorizontal="true"
            android:text="7GB" 
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnDeleteAudio"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_below="@+id/textAudioSize"
            android:text="@string/clean_space"
            android:textSize="14sp" 
            android:visibility="gone"/>

    </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/vLine1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/llTotalContent"
        android:layout_margin="3dp"
        android:background="#1BBFE0" />

    <RelativeLayout 
  		android:id="@+id/rlBackupContent"
        android:layout_below="@+id/vLine1"        
  		android:layout_width="match_parent"
  		android:layout_height="wrap_content"
        >
    	<ImageView
    	        android:id="@+id/imagePC"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_alignParentLeft="true"
    	        android:layout_marginLeft="30dp"
    	        android:layout_marginTop="10dp"
    	        android:src="@drawable/ic_offline" />
        
        <TextView
        	android:id="@+id/tvBackupPC"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="15dp"
        	android:layout_marginLeft="10dp"
        	android:layout_marginRight="15dp"        	
        	android:layout_toRightOf="@+id/imagePC"
        	android:text="Aaron"
        	android:maxLines="2"
        	android:textSize="18sp"
        	android:textColor="#FFFFFF"/>

    	<TextView
    	    android:id="@+id/tvContent"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_below="@+id/imagePC"
    	    android:layout_marginTop="5dp"
    	    android:layout_centerHorizontal="true"
    	    android:text="@string/backup_progress"
    	    android:textColor="#FFFFFF"
    	    android:textAppearance="?android:attr/textAppearanceLarge" />
    	<TextView
    	        android:id="@+id/tvLastBackupTime"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_centerHorizontal="true"
    	        android:layout_below="@+id/tvContent"
    	        android:textColor="#FFFFFF"
    	        android:text="@string/backup_last_local_time" />
    		
    	<ImageView 
    	        android:id="@+id/ivFile"
    	        android:layout_width="110dp"
    	        android:layout_height="110dp"
    	        android:layout_below="@+id/tvLastBackupTime"
    	        android:layout_centerHorizontal="true"
    	        android:layout_margin="10dp"
    	        android:src="@drawable/ic_photos"
    	        android:background="#33FFFFFF" />
    	<ImageView 
    	        android:id="@+id/ivPlay"
    	        android:layout_width="20dp"
    	        android:layout_height="20dp"
    	        android:layout_alignTop="@+id/ivFile"
    	        android:layout_alignBottom="@+id/ivFile"
    	        android:layout_alignLeft="@+id/ivFile"
    	        android:layout_alignRight="@+id/ivFile"    	        
    	        android:layout_centerHorizontal="true"
    	        android:padding="20dp"
    	        android:src="@drawable/ic_play_video"
    	        android:visibility="invisible" />
    	<TextView
    	        android:id="@+id/tvDetail"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_centerHorizontal="true"
    	        android:layout_margin="3dp"
    	        android:layout_below="@+id/ivFile"
    	        android:textColor="#FFFFFF"
    	        android:text="ddd" />
    		
    </RelativeLayout>
    <!-- ListView
  		android:id="@+id/listview"
        android:layout_above="@+id/rlSetting" 
        android:layout_below="@+id/vLine1"        
  		android:layout_width="match_parent"
  		android:layout_height="wrap_content"
  		android:layout_marginLeft="3dp"
  		android:layout_marginRight="3dp"
  		android:drawSelectorOnTop="false"
  		android:listSelector="@android:color/transparent"
  		android:cacheColorHint="@android:color/transparent"
  		android:clickable="true"
  		android:visibility="gone">

	</ListView --> 	
	
    <RelativeLayout
        android:id="@+id/rlSetting"
        android:layout_width="match_parent"
  		android:layout_height="match_parent"
  		android:layout_below="@+id/vLine1"  
        >
	    <TextView 
        	android:id="@+id/tvConnectPC"
        	android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:layout_marginTop="40dip"
  			android:layout_centerHorizontal="true"
		    android:text="@string/connect_a_pc"		
		    android:textColor="#FFFFFF"
		    android:textSize="24sp"
	    />
        <ImageView
        	android:id="@+id/ivAddpc"
        	android:layout_width="90dip"
  			android:layout_height="90dip"
  			android:layout_margin="1dp"
  			android:layout_below="@+id/tvConnectPC"
  			android:layout_centerHorizontal="true"
            android:src="@drawable/add_pc"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/ivSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/llTotalContent"
        android:layout_alignTop="@+id/imageDevice"
        android:src="@drawable/setting" />

</RelativeLayout>