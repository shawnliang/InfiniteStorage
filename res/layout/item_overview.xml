<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/overview_item_padding" >

    <RelativeLayout
        android:id="@+id/container_imagearea"
        android:layout_width="@dimen/overview_image_width"
        android:layout_height="@dimen/overview_image_height"
        android:layout_centerVertical="true"
        android:background="@drawable/list_selector"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="5dip"
        android:paddingBottom="5dip" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/overview_image_width"
        android:layout_height="@dimen/overview_image_height"
        android:layout_below="@+id/container_imagearea"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="0dip"
        android:paddingBottom="0dip" >

        <ImageView
            android:id="@+id/reflection_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    
    <TextView
        android:layout_width="@dimen/overview_image_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container_imagearea"
        android:gravity="center"
        android:textColor="#E0E0E0"
        android:textSize="22sp"
        android:id="@+id/text_label"
         
        />

</RelativeLayout>