<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp" >
    <ImageView
        android:id="@+id/imagePC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnVideoPhoto"
        android:layout_marginLeft="14dp"
        android:layout_toLeftOf="@+id/textPeriod"
        android:src="@drawable/ic_station" />
    
    <TextView
        android:id="@+id/textBackupPC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imagePC"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imagePC"
        android:text="G-SO&apos;s PC(Backuping....)"
        android:textSize="14sp" />

    <TextView
       android:id="@+id/textBackupDays"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/imagePC"
       android:layout_alignLeft="@+id/imagePC"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="10dp"       
       android:text="20090101~20100102"       
       />
    

</RelativeLayout>